<div id="search-form">
  <%= form_tag results_path, method: "get" do %>
    <div>
      <%= text_field_tag :search, params[:search],
        placeholder: "D, G, C, Em, Am" %>
    </div>
    <div>
      <%= radio_button_tag :option, "fewer", params[:option] == "fewer" %>
      <%= label_tag(
        :option_fewer,
        "Include songs with fewer of these chords") %>
      <%= radio_button_tag :option, "more", params[:option] == "more" %>
      <%= label_tag(
        :option_more,
        "Include songs with more than these chords") %>
      <%= radio_button_tag :option, "any", params[:option] == "any" %>
      <%= label_tag(
        :option_any,
        "Include all songs with any of these chords") %>
    </div>
    <div>
      <%= submit_tag "Search", name: nil %>
    </div>
  <% end %>
</div>
